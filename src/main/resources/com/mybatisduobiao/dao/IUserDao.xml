<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 以上是mapper的约束-->
<mapper namespace="com.mybatisduobiao.dao.IUserDao">

    <!-- 查询所有-->
    <select id="findAll" resultType="com.mybatisduobiao.domain.User">
        select * from user
    </select>

    <!-- 查询用户（根据id）-->
    <select id="findById" parameterType="integer" resultType="com.mybatisduobiao.domain.User">
        select * from user where id = #{uid}
    </select>

</mapper>